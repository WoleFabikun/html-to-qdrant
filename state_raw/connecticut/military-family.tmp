            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    document.querySelectorAll('a[href^="/login?ReturnUrl="]').forEach(link => {
                        link.addEventListener('click', (e) => {
                            e.preventDefault();
                            const returnUrl = new URL(link.href).searchParams.get('ReturnUrl');
                            document.cookie = `ReturnUrl=${returnUrl}; path=/`;
                            window.location.href = '/login';
                        });
                    });
                });

                function getCookie(name) {
                    const value = `; ${document.cookie}`;
                    const parts = value.split(`; ${name}=`);
                    if (parts.length === 2) return parts.pop().split(';').shift();
                }

                window.onload = () => {
                    const returnUrl = getCookie('ReturnUrl');
                    if (returnUrl) {
                        document.cookie = 'ReturnUrl=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT';
                        window.location.href = decodeURIComponent(returnUrl);
                    }
                };
            </script>
